QScrollBar:horizontal
{
    margin: 16px 0 16px 0;
    border: 1px solid #202020;
    background: #303030;
    height: 11px;
}

QScrollBar::handle:horizontal
{
    background: QLinearGradient( x1: 0, y1: 0, x2: 0, y2: 1, stop: 0.0 #606060, stop: 0.4 #505050, stop: 1 #353535);
    min-height: 20px;
    border-radius: 4px;
}

QScrollBar::add-line:horizontal
{
    border: 1px solid #202020;
    border-radius: 2px;
    background: QLinearGradient( x1: 0, y1: 0, x2: 0, y2: 1, stop: 0.0 #606060, stop: 0.4 #505050, stop: 1 #353535);
    width: 14px;
    subcontrol-position: right;
    subcontrol-origin: margin;
}

QScrollBar::sub-line:horizontal
{
    border: 1px solid #202020;
    border-radius: 2px;
    background: QLinearGradient( x1: 0, y1: 0, x2: 0, y2: 1, stop: 0.0 #606060, stop: 0.4 #505050, stop: 1 #353535);
    width: 14px;
    subcontrol-position: left;
    subcontrol-origin: margin;
}

QScrollBar::right-arrow:horizontal, QScrollBar::left-arrow:horizontal
{
    border: 1px solid black;
    width: 3x;
    height: 2x;
    background: #dddddd;
}

QScrollBar::add-page:horizontal, QScrollBar::sub-page:horizontal
{
    background: none;
}

QScrollBar:vertical
{
    background: #303030;
    width: 11px;
    margin: 16px 0 16px 0;
    border: 1px solid #202020;
}

QScrollBar::handle:vertical
{
    background: QLinearGradient( x1: 0, y1: 0, x2: 1, y2: 0, stop: 0.0 #606060, stop: 0.4 #505050, stop: 1 #353535); /*QLinearGradient( x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 #ffa02f, stop: 0.5 #d7801a, stop: 1 #ffa02f);*/
    min-height: 20px;
    border-radius: 4px;
}

QScrollBar::add-line:vertical
{
    border: 1px solid #202020;
    border-radius: 2px;
    background: QLinearGradient( x1: 0, y1: 0, x2: 1, y2: 0, stop: 0.0 #606060, stop: 0.4 #505050, stop: 1 #353535); /*QLinearGradient( x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 #ffa02f, stop: 1 #d7801a);*/
    height: 14px;
    subcontrol-position: bottom;
    subcontrol-origin: margin;
}

QScrollBar::sub-line:vertical
{
    border: 1px solid #1b1b19;
    border-radius: 2px;
    background: QLinearGradient( x1: 0, y1: 0, x2: 1, y2: 0, stop: 0.0 #606060, stop: 0.4 #505050, stop: 1 #353535); /*QLinearGradient( x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 #ffa02f, stop: 1 #d7801a);*/
    height: 14px;
    subcontrol-position: top;
    subcontrol-origin: margin;
}

QScrollBar::up-arrow:vertical, QScrollBar::down-arrow:vertical
{
    border: 1px solid black;
    width: 2px;
    height: 3px;
    background: #dddddd; /*white;*/
}

QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical
{
    background: none;
}


QHeaderView::section
{
    background-color: QLinearGradient(x1:0, y1:0, x2:0, y2:1, stop:0 #505050, stop: 0.5 #303030, stop: 0.6 #404040, stop:1 #505050);
    color: white;
