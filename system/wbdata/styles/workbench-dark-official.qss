QMenu::item:selected
{
    background-color: QLinearGradient(x1:0, y1:0, x2:0, y2:1, stop:1 #303030, stop:0.4 #505050 );
    border: 1px solid #707070;
    border-left-width: 1px;
    margin-left: 1px;
    color: #dddddd;
}

/* not tested as we don't have a separator anywhere yet */
QMenu::separator
{
    height: 2px;
    background-color: QLinearGradient(x1:0, y1:0, x2:0, y2:1, stop:0 #101010, stop: 0.3 #202020, stop:1 #404040);
    padding-left: 4px;
    margin-left: 4px;
    margin-right: 4px;
}


/* color gradient for listview, tables, etc */ 
QAbstractItemView
{
    background-color: QLinearGradient( x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 #303030, stop: 0.1 #353535, stop: 1 #404040);
    alternate-background-color: yellow;
}


QLineEdit
