QDockWidget::title
{
    text-align: center;
    spacing: 3px; /* spacing between items in the tool bar */
/*    background-color: #252525;*/
    border: 1px solid #202020;
    background-color: QLinearGradient(x1:0, y1:0, x2:0, y2:1, stop:0 #505050, stop: 0.5 #303030, stop: 0.6 #404040, stop:1 #505050);
/*    background-color: QLinearGradient(x1:0, y1:0, x2:0, y2:1, stop:0 #323232, stop: 0.5 #242424, stop:1 #323232);*/
}

QDockWidget::close-button, QDockWidget::float-button
{
}

QDockWidget::close-button:hover, QDockWidget::float-button:hover
{
    background-color: #303030; /* has no effect :( */ 
}

QDockWidget::close-button:pressed, QDockWidget::float-button:pressed
{
    padding: 1px -1px -1px 1px;
}


QProgressBar
{
    border: 1px solid grey;
    border-radius: 5px;
    border-color: #505050;
    text-align: center;
    color: #ffffff;
}

QProgressBar::chunk
{
    background-color: #d7801a;
    width: 2.15px;
    margin: 0.5px;
}


QMainWindow::separator
{
    background-color: QLinearGradient(x1:0, y1:0, x2:0, y2:1, stop:0 #202020, stop: 0.5 #151515, stop: 0.6 #202020, stop:1 #303030);
    color: white;
    padding-left: 4px;
    border: 1px solid #404040;
    spacing: 3px; /* spacing between items in the tool bar */
}

QMainWindow::separator:hover
{
    background-color: QLinearGradient(x1:0, y1:0, x2:0, y2:1, stop:0 #d7801a, stop:0.5 #b56c17 stop:1 #ffaa00);
    color: white;
    padding-left: 4px;
    border: 1px solid #606060;
    spacing: 3px; /* spacing between items in the tool bar */
}


