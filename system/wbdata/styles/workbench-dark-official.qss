QTabBar::tab
{
    color: #ffffff;
    border: 1px solid #404040;
    border-bottom-style: none;
    background-color: /*#303030;*/ QLinearGradient(x1:0, y1:0, x2:0, y2:1, stop:1 #303030, stop:0.4 #505050 );
    padding-left: 10px;
    padding-right: 10px;
    padding-top: 3px;
    padding-bottom: 2px;
    margin-right: -1px;
    top: 2px;
}

QTabWidget::pane
{
    border: 1px solid #404040;
    top: 1px;
}

QTabBar::tab:last
{
    margin-right: 0; /* the last selected tab has nothing to overlap with on the right */
    border-top-right-radius: 4px;
}

QTabBar::tab:first
{
    border-top-left-radius: 4px;
}

QTabBar::tab:first:!selected
{
    margin-left: 0px; /* the last selected tab has nothing to overlap with on the right */
    border-top-left-radius: 4px;
}


QTabBar::tab:!selected
{
    color: #c0c0c0;
    border-bottom-style: solid;
    margin-top: 4px;
}

QTabBar::tab:selected
{
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
    margin-bottom: 0px;
    background-color: QLinearGradient(x1:0, y1:0, x2:0, y2:1, stop:0 #404040, stop:0.4 #606060, stop:1 #303030 );
}

QTabBar::tab:!selected:hover
{
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
    background-color: QLinearGradient(x1:0, y1:0, x2:0, y2:1, stop:1 #303030, stop:0.4 #606060 );
}


QGroupBox
{
    border: 1px solid #606060;
    border-radius: 6px;
    margin-top: 1.5ex; /* leave space at the top for the title */
    padding: 6 0px;
}

QGroupBox::title
{
    subcontrol-origin: margin;
    subcontrol-position: top center;
    padding: 0 8px;
    border-radius: 4px;
    background-color: QLinearGradient(x1:0, y1:0, x2:0, y2:1, stop:1 #303030, stop:0.4 #606060 );
}

QTreeView
{
    alternate-background-color: #303030;
    show-decoration-selected: 1;
}

QTreeView::item
{
    border: 0px transparent;
    border-top-color: transparent;
    border-bottom-color: transparent;
    color: #dddddd;
}

QTreeView::item:selected:active
{
    background: QLinearGradient( x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 #ffaa00, stop: 1 #d7801a);
    color: #000000;
}

QTreeView::item:selected:!active
{
    background: QLinearGradient( x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 #505050, stop: 1 #404040);
    color: #ffffff;
}

PropertyGrid
{
    alternate-background-color: #303030;
		show-decoration-selected: 0;
		qproperty-groupBackgroundColor: #404060;
		qproperty-textColor: #dddddd;
		qproperty-modifiedValueColor: #ff0000;
		qproperty-grayedValueColor: #a0a0a0;
}

PropertyGrid::item
{
		height: 18px;
		color: none;	/*very important!!! Never change this, because it removes inherited color definition from QTreeView and allow coloring item color from code*/
}

PropertyGrid::branch
{
	background: palette(base);
}

PropertyGrid::branch:has-siblings:!adjoins-item
{
	border-image: url(:/Workbench/QtExtensions/PropertyGrid/branch-vline.png);
	background: transparent;
}

PropertyGrid::branch:has-siblings:adjoins-item
{
	border-image: url(:/Workbench/QtExtensions/PropertyGrid/branch-more.png);
	background: transparent;
}

PropertyGrid::branch:!has-children:!has-siblings:adjoins-item
{
	border-image: url(:/Workbench/QtExtensions/PropertyGrid/branch-end.png);
	background: transparent;
}

PropertyGrid::branch:closed:has-children:has-siblings
{
	border-image: none;
	image: url(:/Workbench/QtExtensions/PropertyGrid/branch-closed-siblings.png);
	background: transparent;
}

PropertyGrid::branch:has-children:!has-siblings:closed
{
	border-image: none;
	image: url(:/Workbench/QtExtensions/PropertyGrid/branch-closed.png);
	background: transparent;
}

PropertyGrid::branch:open:has-children:has-siblings
{
	border-image: none;
	image: url(:/Workbench/QtExtensions/PropertyGrid/branch-opened-siblings.png);
	background: transparent;
}

PropertyGrid::branch:open:has-children:!has-siblings
{
	border-image: none;
	image: url(:/Workbench/QtExtensions/PropertyGrid/branch-opened.png);
	background: transparent;
}

