/*

	Default Enfusion Editor dark skin.

*/



QWidget
{
    color: #dddddd;
    background-color: #303030;
}

QWidget:item:hover
{
    background-color: QLinearGradient( x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 #404040, stop: 1 #303030);
    color: #dddddd;
}

QWidget:item:selected
{
    background-color: QLinearGradient( x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 #ffaa00, stop: 1 #b66c16);
    color: #000000;
}

QWidget:disabled
{
    color: #808080;
    background-color: #303030;
}


/* opacity doesn't work well: when popping up, the tooltip is colored correctly, but then it changes its opacity to 50 or so */
QToolTip
{
    background-color: QLinearGradient( x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 #ffffff, stop: 1 #909090);
    border: 1px solid black;
    color: #000000;
    border-radius: 2px;
}


QMenuBar::item
{
    background: transparent;
}

QMenuBar::item:selected
{
    /*background: transparent;*/
    background-color: QLinearGradient(x1:0, y1:0, x2:0, y2:1, stop:1 #303030, stop:0.4 #505050 );
    border: 1px solid #707070;
    color: #dddddd;
/*    color: #000000;*/
}

QMenuBar::item:pressed
{
    border: 1px solid #505050;
    background-color: QLinearGradient(x1:0, y1:0, x2:0, y2:1, stop:1 #404040, stop:0.4 #606060 );
    margin-bottom: -1px;
    padding-bottom: 1px;
    border: 1px solid #707070;
    color: #ffffffff;
}


QMenu
{
    border: 1px solid #202020;
}

QMenu::item
{
    padding: 4px 30px 4px 30px;
    margin-left: 2px;
}

